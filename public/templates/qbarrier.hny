from synch import Queue, put, get

const NTHREADS = 3
const NROUNDS = 4

round = [0,] * NTHREADS
q = [Queue(),] * NTHREADS

def thread(self):
    for r in {1..NROUNDS}:
        for i in {0..NTHREADS-1} where i != self:
            put(?q[i], None)
        for i in {0..NTHREADS-1} where i != self:
            get(?q[self])
        round[self] += 1
        assert (max(round) - min(round)) <= 1

for i in {0..NTHREADS-1}:
    spawn thread(i)
